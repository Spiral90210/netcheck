#:kivy 1.11

<CurrentResult>:
    orientation: "horizontal"
    Label:
        font_size: 30
        text: root.name
        size_hint_x: .25
    Label:
        font_size: 70
        text: root.down_speed
        size_hint_x: .5
    Label:
        font_size: 30
        text: root.up_speed
        size_hint_x: .25

<MainLayout>:
    id:main_layout
    orientation: "vertical"
    size: (200, 100)
    padding: 10

    CurrentResult:
        id:cur_result
        size_hint_y: 0.75

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.25
        AnchorLayout:
            anchor_x: "right"
            anchor_y: "bottom"
            Button:
                id: btn_refresh
                disabled: True
                size_hint: .4, .4
                text: "refreshing"
                font_size: "14pt"
                on_press: root.before_update()
                on_release: root.run_update(0)
